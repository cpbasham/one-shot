<% if ONLINE %>
  <!--<% url = "#{ITEM_IMAGE_LINK}/#{@item["image"]["full"]}" %>-->
  <%
  url = "#{SPRITE_LINK}/#{@item["image"]["sprite"]}"
  image = @item["image"]
  x, y, w, h = image["x"], image["y"], image["w"], image["h"]
  %>
  <img src='/img/gold.png' style=<%="'width:#{w};height:#{h};background: url(#{url}) #{x} #{y};'"%>>
<% else %>
  <% url = "/img/test/#{@item["image"]["full"]}" %>
  <img src='<%= "#{url}" %>' class='<%= "#{@cls}" %>' width="64" height="64" />
<% end %>